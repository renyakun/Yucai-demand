<!--pages/user/lauched/lauched.wxml-->
<cu-custom isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content" class="margin-top-xs">已发布职位</view>
</cu-custom>

<scroll-view scroll-y class="scrollPage padding-bottom">
  <view class="cu-bar bgwhite justify-start ">
    <view class="action sub-title">
      <text class="text-xl text-bold text-blue" style="color:#0081ff">职位列表</text>
      <text class="text-Abc text-blue" style="color:#0081ff">describe</text>
    </view>
  </view>

  <view class="bgwhite" style="" wx:if="{{demandflag}}">
    <image src="/images/rhomb-white.gif" mode="aspectFit" class="gif-white response" style="height:100vh"></image>
  </view>

  <block wx:else>
    <view class="cu-list menu-avatar" wx:if="{{loadflag}}">
      <view class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}} margin-top-xs margin-left-xs margin-right-xs padding-top-xl padding-bottom-xl bgwhite" style="height:25vh;border-left:0.3vh solid #0081ff;border-top-left-radius: 0.5vh;border-bottom-left-radius: 0.5vh;"
        wx:for="{{cardlist}}" wx:key="demandId" bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-target="move-box-{{index}}">
        <view class="content" style="margin-left:-8vh;width:35vh;" data-id="{{item.demandId}}" bindtap="demandIdjump">
          <view class="text-bold text-df" style="color:#000">
            <text class="text-cut" style="width:90%">{{item.jobName}}</text>
          </view>
          <view class="text-bold" style="color:#0081ff;">{{item.jobType}} | {{item.releaseType}}认证</view>
          <view class="" style="color:#000">发布时间：
            <!-- <text class="cuIcon-timefill text-blue text-df margin-right-xs" style="color:#0081ff"></text> -->
            <text style="color:#0081ff">{{item.createTime}}</text>
          </view>
          <view class="" style="color:#000">今日浏览数：
            <text style="color:#0081ff">{{item.todayBrowseNum}}</text>
          </view>
          <view class="" style="color:#000">当前投递数：
            <text style="color:#0081ff">{{item.sendCardNum}}</text>
          </view>
          <view class="" style="color:#000">待合作数：
            <text style="color:#0081ff">{{item.waitCooperationNum}}</text>
          </view>
          <view class="" style="color:#000">取消邀约数：
            <text style="color:#0081ff">{{item.cancelInvitationNum}}</text>
          </view>
        </view>
        <view class="action" style="color:#000">
          <text class="cuIcon-pullleft" style="color:#000;font-size:5vh"></text>
        </view>

        <view class="move bgwhite">

          <view class="padding-xs">
            <view class="cu-tag indigo round shadow shadow-lg padding-right-xs padding-left-xs" style="color:white" data-id="{{item.demandId}}" bindtap="demanditem">查看详情</view>
          </view>
          <view class="padding-xs">
            <view class="cu-tag indigo round shadow shadow-lg padding-right-xs padding-left-xs" style="color:white" data-name="{{item.jobName}}" data-demandid="{{item.demandId}}" bindtap="deliver">邀请投递</view>
          </view>
          <view class="padding-xs">
            <view class="cu-tag bggrey round" style="color:white;width:8vh" data-item="{{item}}" bindtap="deldemand">关闭</view>
          </view>

        </view>
      </view>
    </view>

    <view class="padding-top-xl bgwhite flex justify-center" wx:else style="width:100%">
      <image src="/images/nodata.jpg" mode="aspectFit"></image>
    </view>

  </block>

</scroll-view>