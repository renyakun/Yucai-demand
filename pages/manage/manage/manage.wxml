<!--pages/manage/manage/manage.wxml-->
<cu-custom isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content" class="margin-top-xs">名片管理</view>
</cu-custom>
<scroll-view scroll-y class="scrollPage" scrollTop="{{scrollTop}}">
  <view class="cu-bar search bgwhite  fixed shadow-blur" style="height:7vh;top:10vh;">
    <scroll-view scroll-x class="nav" scroll-with-animation scroll-left="{{scrollLeft}}">
      <view class="cu-item {{item.id==TabCur?'text-black cur':''}}" bindtap="tabSelect" data-id="{{item.id}}" wx:for="{{tablist}}" wx:key>
        <text class="text-center" style="color:black">{{item.flag}}</text>
      </view>
    </scroll-view>
  </view>

  <view class="bgwhite" style="" wx:if="{{demandflag}}" style="height:100vh">
    <image src="/images/rhomb-white.gif" mode="aspectFit" class="gif-white response"></image>
  </view>

  <block wx:else>

    <view style="margin-top:8.5vh" class=" margin-left-xs margin-right-xs margin-bottom-xl round">
      <block wx:if="{{TabCur==item.id}}" wx:for="{{tablist}}" wx:key class="">
        <scroll-view scroll-y class="bgwhite shadow scrollPage" style=" ">

          <block wx:if="{{item.id== 1}}">

            <view class="margin-top " wx:if="{{accepflag}}">
              <view class="cu-bar cu-card no-card bgblue radius shadow margin-top-xs margin-left-xs margin-right-xs flex justify-center" wx:for="{{acceptlist}}" wx:key data-id="{{item.id}}" bindtap="cardel">
                <view class="bgwhite radius padding-top padding-bottom" style="width:99.5%;">
                  <view class="flex flex-wrap align-end">
                    <view class="cu-avatar round lg" style="background-image:url({{item.avatar}});"></view>
                    <view class="padding-left">{{item.realName}}</view>
                  </view>
                  <view class="flex flex-wrap margin-top">
                    <view class="padding-left">{{item.sex}} | {{item.age}} | {{item.email}}</view>
                    <view class="padding-left">
                      <text class="text-bold">期望职位：</text>
                      <text class="text-blue" style="color:#0081ff">{{item.dreamPosition}}</text>
                    </view>
                  </view>
                  <view class="flex flex-wrap margin-top">
                    <view class="padding-left">
                      <text class="text-bold">投递需求：</text>
                      <text class="text-blue" style="color:#0081ff;">{{item.demandHistroy.jobName}}</text>
                    </view>
                  </view>

                </view>

              </view>
            </view>

            <view class="padding-top-xl bgwhite flex justify-center" wx:else style="width:100%">
              <image src="/images/nodata.jpg" mode="aspectFit"></image>
            </view>

          </block>

          <block wx:elif="{{item.id== 2}}">

            <view class="margin-top " wx:if="{{invitaflag}}">
              <view class="cu-bar cu-card no-card bgblue radius shadow margin-top-xs margin-left-xs margin-right-xs flex justify-center" wx:for="{{invitalist}}" wx:key data-id="{{item.id}}" data-demandid='{{item.demandHistroy.demandId}}'>
                <view class="bgwhite radius padding-top padding-bottom" style="width:99.5%;">
                  <view class="flex flex-wrap align-end">
                    <view class="cu-avatar round lg" style="background-image:url({{item.avatar}});"></view>
                    <view class="padding-left text-cut">{{item.realName}}</view>
                  </view>
                  <view class="flex flex-wrap margin-top">
                    <view class="padding-left">{{item.sex}} | {{item.age}} | {{item.email}}</view>
                    <view class="padding-left">
                      <text class="text-bold">期望职位：</text>
                      <text class="text-blue" style="color:#0081ff">{{item.dreamPosition}}</text>
                    </view>
                  </view>
                  <view class="flex flex-wrap margin-top">
                    <view class="padding-left">
                      <text class="text-bold">投递需求：</text>
                      <text class="text-blue" style="color:#0081ff;">{{item.demandHistroy.jobName}}</text>
                    </view>
                  </view>

                </view>

              </view>
            </view>

            <view class="padding-top-xl bgwhite flex justify-center" wx:else style="width:100%">
              <image src="/images/nodata.jpg" mode="aspectFit"></image>
            </view>

          </block>


          <block wx:elif="{{item.id== 3}}">

            <view class="margin-top " wx:if="{{sendflag}}">
              <view class="cu-bar cu-card no-card bgblue radius shadow margin-top-xs margin-left-xs margin-right-xs flex justify-center" wx:for="{{sendlist}}" wx:key data-id="{{item.id}}" data-demandid='{{item.demandHistroy.demandId}}'>
                <view class="bgwhite radius padding-top padding-bottom" style="width:99.5%;">
                  <view class="flex flex-wrap align-end">
                    <view class="padding-left text-cut">
                      <text class="text-bold text-blue" style="color:#0081ff">面试人：</text>{{item.demandHistroy.realName}}
                      <text class="margin-left text-bold text-blue" style="color:#0081ff">面试时间：</text>
                      <text class="text-cut">{{item.invitationTime}}</text>
                    </view>
                  </view>
                  <view class="flex flex-wrap align-end margin-top-sm">
                    <view class="padding-left text-cut">
                      <text class="text-bold text-blue" style="color:#0081ff">投递需求：</text>{{item.demandHistroy.jobName}}
                    </view>
                  </view>
                  <view class="flex flex-wrap align-end margin-top-sm">
                    <view class="padding-left text-cut">
                      <text class="text-bold text-blue" style="color:#0081ff">面试地点：</text>{{item.address}}
                    </view>
                  </view>
                  <view class="flex flex-wrap align-end margin-top-sm" style="display: {{item.flag==0?'':'none'}}">
                    <view class="padding-left text-cut">
                      <text class="text-bold text-blue" style="color:#0081ff">取消原因：</text>{{item.reason}}
                    </view>
                  </view>
                </view>

              </view>
            </view>

            <view class="padding-top-xl bgwhite flex justify-center" wx:else style="width:100%">
              <image src="/images/nodata.jpg" mode="aspectFit"></image>
            </view>

          </block>

          <block wx:else>
            <view wx:if="{{plflag}}"></view>

            <view class="padding-top-xl bgwhite flex justify-center" wx:else style="width:100%">
              <image src="/images/nodata.jpg" mode="aspectFit"></image>
            </view>

          </block>

        </scroll-view>
      </block>
    </view>

  </block>

</scroll-view>